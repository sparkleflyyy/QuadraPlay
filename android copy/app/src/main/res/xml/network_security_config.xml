<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext (HTTP) traffic for development/sandbox -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
    
    <!-- Domain config for Midtrans Sandbox -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">midtrans.com</domain>
        <domain includeSubdomains="true">sandbox.midtrans.com</domain>
        <domain includeSubdomains="true">api.midtrans.com</domain>
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </domain-config>
</network-security-config>
